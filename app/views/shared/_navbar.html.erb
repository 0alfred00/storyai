<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <h2 class="logo-soozie">soozie</h2>
    <i class="fa-solid fa-meteor logo-soozie"></i>
  <% end %>
  <% if (params["action"] != "home") && (user_signed_in?) %>
    <div class="d-flex align-items-center navbar-center">
      <%= form_with url: stories_path, method: :get, class: "d-flex search-field" do %>
        <div class="input-group">
          <%= text_field_tag :query,
            params[:query],
            class: "search-input no-outline form-control input-field ðŸ‘Œ",
            placeholder: "Search"%>
          <div class="input-group-append">
            <button class="search-button input-group-text border-0 bg-transparent">
              <i class="magnifying fa-solid fa-magnifying-glass"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <% if user_signed_in? %>
        <li class="nav-item active"></li>
        <li class="nav-item">
          <%= link_to stories_path, class: "navbar-icon" do %>
            <i class="fa-solid fa-house m-2 fs-3" style="color:#F8FBFC;"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to history_stories_path, class: "navbar-icon" do %>
            <i class="fa-solid fa-clock-rotate-left m-2 fs-3" style="color:#F8FBFC;"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to favorites_path, class: "navbar-icon" do %>
            <i class="fa-solid fa-heart m-2 fs-3" style="color:#F8FBFC;"></i>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <span class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa-regular fa-user m-2 fs-3" style="color:#F8FBFC;"></i></span>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <div class="button">
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
      </div>
      <% end %>
    </ul>
  </div>
</div>
