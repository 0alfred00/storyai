<%# hidden loaded card with button to go to show page of last story %>
<div class="storycard" id="loaded-card">
  <%# <img src="https://images.unsplash.com/photo-1536323760109-ca8c07450053" alt="Storypic" style="width:100%"> %>
  <div class="books-card-loaded" data-loading-target="link"><%= link_to "Go to story", story_path(@last_story), class: "new-story-btn" %></div>
  <div class="card-container">
    <div class="main-container">
      <div class="card-title">New story is ready</div>
      <div class="card-description">
        <p><span data-controller="typed"
        data-typed-sentences-value="<%= ['Start reading now...', 'Time to dive in...', "Go go go...", 'Click the button already...', 'Lights out...'].to_json %>"
        data-typed-type-speed-value="20"
        data-typed-back-speed-value="0"
        data-typed-shuffle-value="true"
        data-typed-loop-value="true"></span></p>
      </div>
    </div>
  </div>
</div>
