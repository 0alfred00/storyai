<div class="storycard">
  <img src="https://images.unsplash.com/photo-1536323760109-ca8c07450053" alt="Storypic" style="width:100%">
  <div class="card-container">
    <div class="main-container">
      <div class="card-title"> <%= story.title %></div>
      <div class="card-description"><%= story.summary %></div>
    </div>
    <div class="details-container">
      <div class="words-count"><%= story.prompt.length.to_i / 130 %> mins</div>
      <div class="heart-container">
      <div class="hearts-count"><%= story.favorites.count %>&ensp;</div>
      <div class="card-heart fa-solid fa-heart"></div>
      <% if current_user %>
        <% if story.prompt.user_id == current_user.id %>
          <%= form_for story, remote: true, html: { id: "story-#{story.id}" } do |f| %>
            <%= f.hidden_field :public %>
            <% if story.public %>
              <%= button_tag(type: 'submit', class: "card-public fa-solid fa-lock-open") do %>
              <% end %>
            <% else %>
              <%= button_tag(type: 'submit', class: "card-public fa-solid fa-lock") do %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
