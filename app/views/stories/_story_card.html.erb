<div class="storycard">
  <img src="https://images.unsplash.com/photo-1536323760109-ca8c07450053" alt="Storypic" style="width:100%">
  <div class="card-container">
    <div class="main-container">
      <div class="hearts-count">9888 saves</div>
      <div class="card-title"> <%= story.title %></div>
      <div class="card-description"><%= story.summary %></div>
    </div>
    <div class="details-container">
      <div class="words-count">1000 words (20mins)</div>
      <div class="created-year"><%= story.created_at %></div>
    </div>
  </div>
</div>
