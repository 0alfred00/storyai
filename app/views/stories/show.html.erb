<div class="content-container">
  <div class="story-container">
    <div class="story-title">
      <h1><%= @story.title %></h1>
    </div>
    <% if @story.prompt.reference_story %>
      <div class="story-content"><p>
        <%= @reference_story.body %>
        </p></div>
        <div class="story-content"><p>
        <span data-controller="typed"
          data-typed-sentences-value="<%= [@story.body].to_json %>">
        </span>
        </p>
      </div>
    <% else %>
      <div class="story-content"><p>
          <span data-controller="typed"
                data-typed-sentences-value="<%= [@story.body].to_json %>">
          </span>
        </p>
      </div>
    <% end %>
  </div>
  <%= render "shared/prompt" %>
</div>
